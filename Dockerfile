# Build stage
FROM node:18-alpine as builder
WORKDIR /app

COPY package*.json ./

RUN npm ci --prefer-offline --no-audit

COPY . .

RUN npm run build

# Production stage
FROM node:18-alpine
WORKDIR /app
ENV NODE_ENV=production

COPY --from=builder /app .

EXPOSE 3000

# Commande pour d√©marrer le serveur au lancement du conteneur
CMD ["node", "app.js"]
